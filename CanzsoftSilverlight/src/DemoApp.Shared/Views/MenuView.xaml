<UserControl x:Class="DemoApp.Shared.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20, 0, 0, 0" MouseLeftButtonDown="Menu_MouseLeftButtonDown">
        <Image Source="{Binding Path=ModuleImage}" Stretch="None" />
        <TextBlock Foreground="White" FontWeight="Bold" FontSize="12" Text="{Binding Path=ModuleName}" />
    </StackPanel>
</UserControl>
