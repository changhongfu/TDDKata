<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:DemoApp.Views"
    xmlns:vm="clr-namespace:DemoApp.ViewModels">
    
    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <AdornerDecorator>
            <view:HomeView />
        </AdornerDecorator>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:SearchCustomerViewModel}">
        <AdornerDecorator>
            <view:SearchCustomersView />
        </AdornerDecorator>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:AddCustomerViewModel}">
        <AdornerDecorator>
            <view:AddCustomerView />
        </AdornerDecorator>
    </DataTemplate>
</ResourceDictionary>